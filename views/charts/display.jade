extends ../base

block append body
	if msg
		span #{msg}
	
	div#configmenudiv
		block menu
			form#configform(name="configform", onsubmit='return false;')
					div#periodradiodiv(data-role='fieldcontain')
						span Each chart will represent the data of
						br
						|<input id='dayradiobutton' class='periodradiobuttons'
						| type='radio' value='#{STRING.DAY}' name='period' 
						| #{autofill.isDayRadioChecked}
						| >
						label(for='dayradiobutton') Day
						br
						| <input id='monthradiobutton' class='periodradiobuttons'
						| type='radio' value='#{STRING.MONTH}' name='period' 
						| #{autofill.isMonthRadioChecked}
						| >
						label(for='monthradiobutton') Month
						br
						|<input id='yearradiobutton' class='periodradiobuttons'
						| type='radio' value='#{STRING.YEAR}' name='period' 
						| #{autofill.isYearRadioChecked}
						| >
						label(for='yearradiobutton') Year
						br
						| <input id='allradiobutton' class='periodradiobuttons'
						| type='radio' value='#{STRING.ALL}' name='period' 
						| #{autofill.isAllRadioChecked}
						| >
						label(for='allradiobutton') Everything

					div(data-role='fieldcontain')
						label(for='startTimeDate') startTime:
							input(id='startTimeDate', type='date', name='startTimeDate',
							placeholder='yyyy-mm-dd')
					
						input(id='startTimeHour', type='time', name='startTimeHour',
						placeholder='hh:mm')

					div(data-role='fieldcontain')
						label(for='endTimeDate') endTime:
							input(id='endTimeDate', type='date', name='endTimeDate',
							placeholder='yyyy-mm-dd')
					
						input(id='endTimeHour', type='time', name='endTimeHour',
						placeholder='hh:mm')

					span Method to apply to the data:
					br
					div(data-role='fieldcontain')
						| <input id='sumradiobutton'  type='radio'  value='sum'
						| name='method' #{autofill.isSumRadioChecked}>
						label(for='sumradiobutton') Sum the data

	div#chart_div

	block javascript
		script(src="/js/jquery-2.1.1.js")
		include ./display.js.jade

